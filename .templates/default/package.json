{
  "name": "@dm-tools/demo",
  "version": "0.1.0",
  "description": "DM-Tools generated TypeScript Node.js demo Server with static Website",
  "main": "src/main.ts",
  "config": {
    "main": "build/main.js"
  },
  "scripts": {
    "dev": "concurrently --kill-others npm:devbuild npm:devwatch",
    "devbuild": "cross-env NODE_ENV=dev tsc -w",
    "devwatch": "gazeall --delay 350 --run \"node build/main.js\" \"build/**/*\"",
    "format": "tsfmt -r --baseDir ./",
    "tsc": "tsc"
  },
  "keywords": [
    "javascript",
    "js",
    "ts",
    "typescript",
    "nodejs"
  ],
  "author": "[Fullname] <your-email>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/<github-user-id>/<project-name>"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "eslint": "^8.32.0",
    "gazeall": "^0.8.1",
    "shx": "^0.3.4",
    "typescript": "^4.9.4",
    "typescript-formatter": "^7.2.2"
  }
}
